@model UserManagement.Web.Models.Users.UserListItemViewModel
<h2>Delete User</h2>
<div class="card">
    <div class="card-body">
        <h5 class="card-title">
            @Model.Forename @Model.Surname
        </h5>
    </div>
    <div class="card-body">
        Date of Birth: @Model.DateOfBirth.ToString("dd/MM/yyyy")<br/>
        Email: @Model.Email<br/>
        Account Active: @(Model.IsActive ? "Yes" : "No")<br/>
    </div>
</div>
<hr/>

<form asp-action="ConfirmDelete" method="post">
    <p>
        <input type="hidden" asp-for="Id"/>
        <button type="submit" class="btn btn-danger"
                onclick="return confirm('Are you sure you want to delete this user?');">Delete User
        </button>
        <a asp-controller="Users" asp-action="List" class="btn btn-secondary">Back to User List</a>
    </p>
</form>
